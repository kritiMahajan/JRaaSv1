extends ../layout

block content
  .page-header
    h3 Profile Details
    .col-sm-2
    h4 Please provide the below details to complete your profile.

    form.form-horizontal(id='profile' method='POST')
      input(type='hidden', name='_csrf', value=_csrf)
      .form-group
        label(class='col-sm-2 control-label', for='title') Title
        .col-sm-4
          input.form-control(type='text', name='title', id='title' rows="3", placeholder="Developer, Intern, Sales Executive")
      .form-group
        label.col-sm-2.control-label(for='specialization') Specialization
        .col-sm-4
            dt.a(href="#", data-toggle="dropdown").dropdown-toggle Select one
            ul.dropdown-menu(role='menu', aria-labelledby='dropdownMenu')
              li
                a(href='#', tabindex='-1') Engineering Backend
              li 
