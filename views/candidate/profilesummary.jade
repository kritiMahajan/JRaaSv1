                a(href='#', tabindex='-1') Marketing
              li
              li
                a(href='#', tabindex='-1') Sales
              li
      .form-group
        label(class='col-sm-2 control-label', for='skills') Skills
        .col-sm-4
          input.form-control(type='text', name='skills', id='skills' rows="3", placeholder="enter relevant skills based on specialization")
      .form-group
        label(class='col-sm-2 control-label', for='location') Location
        .col-sm-4
          input.form-control(type='text', name='location', id='location' rows="3", placeholder="enter your current location for optimal matching")
      .form-group
      label.col-sm-2.control-label(for='search') Looking for 
      .col-sm-4
        label.radio
          input(type='radio', name='search', value='active', data-toggle='radio')
          span Active 
        label.radio
          input(type='radio', name='search', value='passive', data-toggle='radio')
          span Passive
